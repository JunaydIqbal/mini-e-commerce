										<%= link_to "Logout", destroy_customer_session_path, method: :delete, class: "nav-link"%>
										</li>
										<li>
										
											<a>Welcome <b><%=current_customer.email.split("@")[0].capitalize%></b>
											
											</a>
											
										</li>

								</ul>
							</div>
						</div>
					<% elsif !customer_signed_in? && !user_signed_in? %>
