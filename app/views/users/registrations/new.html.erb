<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <section id="form"><!--form-->
    <div class="container center_div">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4 justify-content-center">
          <div class="login-form"><!--login form-->
            <h2>Vendor Register</h2>
            
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
            <br>
            <div class="field">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
            </div>
            <div class="field">
              
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", class: "form-control" %>
            </div>
            <br>
            <%= f.fields_for :company do |comp| %>
              <%= comp.text_field :name, class: "form-control", placeholder: "Company" %>
            <% end %>

            <br>
            <%= f.submit "Sign up", class: "btn btn-primary", data: {disable_with: "Processing..."} %>
            
          </div><!--/login form-->
          <%= render "users/shared/links" %>
        </div>
        
    </div>
  </section><!--/form-->
<% end %>